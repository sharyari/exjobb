\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{title page}
{
%\pgfuseimage{seal-title}
\vskip0pt plus 1filll
\begin{flushright}
{\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle \\ \vskip-10pt \rule{0.6\paperwidth}{0.5mm} \vskip10pt}
{\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor \\ \vskip5pt}
{\usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute \\ \vskip5pt}
{\usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate \\}
\end{flushright}
\vskip0pt plus 1filll
}

\setbeamertemplate{headline}
{
  \framelatex{
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.2\paperheight]{title bar}
    \hskip1.5cm \insertsectionnavigationhorizontal{0pt}{\hskip0.5cm}{}%
    \vskip1.5cm
  \end{beamercolorbox}}
  \vskip -2cm
  \pgfuseimage{logo}
}


\mode
<all>
